{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "nyashyker_translate",
  "rules": {
    "source_file": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "_work"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "credit"
          }
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "part"
          }
        }
      ]
    },
    "comment": {
      "type": "PATTERN",
      "value": "(\\n=\\n)|(\\n=[^\\n=].*\\n)"
    },
    "_work": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "name"
        },
        {
          "type": "SYMBOL",
          "name": "link"
        }
      ]
    },
    "name": {
      "type": "PATTERN",
      "value": "#.*\\n"
    },
    "link": {
      "type": "PATTERN",
      "value": "#https:\\/\\/[a-zA-Z0-9\\._\\-\\/]+\\n"
    },
    "credit": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "#"
        },
        {
          "type": "SYMBOL",
          "name": "role"
        },
        {
          "type": "STRING",
          "value": ":"
        },
        {
          "type": "SYMBOL",
          "name": "persons"
        },
        {
          "type": "STRING",
          "value": "\n"
        }
      ]
    },
    "role": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "Перекладав"
        },
        {
          "type": "STRING",
          "value": "Редагував"
        },
        {
          "type": "STRING",
          "value": "Клінив"
        },
        {
          "type": "STRING",
          "value": "Тайпив"
        },
        {
          "type": "STRING",
          "value": "Обкладинка"
        }
      ]
    },
    "persons": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "person"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SEQ",
            "members": [
              {
                "type": "STRING",
                "value": ","
              },
              {
                "type": "SYMBOL",
                "name": "person"
              }
            ]
          }
        }
      ]
    },
    "person": {
      "type": "PATTERN",
      "value": "[a-zA-ZабвгґдеєжзиіїйклмнопрстуфхцчшщьюяАБВГҐДЕЄЖЗИІЇЙКЛМНОПРСТУФХЦЧШЩЬЮЯ1-9_\\-\\']+"
    },
    "part": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "part_number"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "SYMBOL",
            "name": "page"
          }
        }
      ]
    },
    "part_number": {
      "type": "PATTERN",
      "value": "=== \\d+ ===\\n"
    },
    "page": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "page_number"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "SYMBOL",
                "name": "separator"
              },
              {
                "type": "SYMBOL",
                "name": "sound"
              },
              {
                "type": "SYMBOL",
                "name": "text"
              }
            ]
          }
        }
      ]
    },
    "page_number": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "== \\d+ =="
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "page_real_number"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "\n"
        }
      ]
    },
    "page_real_number": {
      "type": "PATTERN",
      "value": "\\(\\d+\\)"
    },
    "text": {
      "type": "PATTERN",
      "value": "([^\\n=].?\\n)|([^\\n=\\-].*[^\\n\\*][^\\n\\d]+\\n)"
    },
    "sound": {
      "type": "PATTERN",
      "value": ".*\\*\\d+\\n"
    },
    "separator": {
      "type": "PATTERN",
      "value": "---\\n"
    }
  },
  "extras": [
    {
      "type": "SYMBOL",
      "name": "comment"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": []
}
